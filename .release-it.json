{
  "git": {
    "commit": true,
    "commitMessage": "chore(release): v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true,
    "requireUpstream": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "changelogHeader": "# Changelog\n\n",
      "writerOpts": {
        "transform": "changelog-transform.js"
      }
    }
  }
}
